pipeline {
    agent any
	tools {
		maven 'maven'
	}
    stages {
	 
		stage ("Checkout") {
			steps {
				git branch: 'master',
				url: 'https://github.com/vrer2/Sample_Project.git'
			}
		}
		stage ('Test stage') {
			steps {
			sh 'mvn sonar:sonar'
			}
		}         	  
        stage ('Build Stage') {
            steps {
			sh 'mvn clean install'
            }
        }
		stage ('Deployment Stage') {
            steps {
			sh 'cp target/*.war /opt/apache-tomcat-8.5.42/webapps/'
            }
        }
    }
}
